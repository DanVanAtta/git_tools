#!/bin/bash
BRANCH=$1
if [ -z "$BRANCH" ]; then
 echo "Usage: $(basename $0) <branch>"
 echo " branch: the branch to checkout and then rebase on top of master."
 echo "    Script then pushes the updated branch to origin"
 exit -1
fi
git checkout $1 &&  git pull --rebase . master && git push -f origin $1
